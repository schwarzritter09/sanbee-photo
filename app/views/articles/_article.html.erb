
      <% tr_class = cycle("even", "odd") %>
      <tr class="article <%= article.close_flag ? 'closed' : 'not_close' %> <%= tr_class %>">
        <td>
          <%= article.message %>

          <%= twitter_mention_tag article %>
        </td>
        <td><%= article.member.name %></td>
        <td>
          <% article.members.each do |requestmember| %>
            <div class="requestmember">
              <%= requestmember.name %>
            </div>
          <% end %>
        </td>
        <td>
        <% if article.obverse_photo.present? %>
          <%= link_to image_tag(article.obverse_photo.thumb.url), article %>
        <% else %>
          <%= link_to '詳細を見る', article %>
        <% end %>
        <% if article.reverse_photo.present? %>
          <br>
          <%= image_set_tag asset_path('star.png'), { asset_path('star.png') => '1x', asset_path('star@2x.png') => '2x'}, :border => '0', :align => 'left' %>
          裏書きあり
        <% end %>
        </td>
      </tr>
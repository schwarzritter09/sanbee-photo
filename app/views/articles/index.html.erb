<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>メッセージ</th>
      <th>譲</th>
      <th>求</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr class="<%= article.close_flag ? 'closed' : 'not_close' %> <%= cycle("even", "odd") %>">
        <td>
          <%= article.message %>
          <br>
          <a href="https://twitter.com/intent/tweet?screen_name=<%= article.user.username %>&text=<%= url_for :controller => 'articles', :action => 'show', :id => article.id, :only_path => false %>" data-size="large" class="tweetbtn" data-lang="ja">
            @<%= article.user.username %>さんへツイート
          </a>
        </td>
        <td><%= article.member.name %></td>
        <td>
          <% article.members.each do |requestmember| %>
            <%= requestmember.name %> <br>
          <% end %>
        </td>
        <% if article.obverse_photo.present? %>
          <td><%= link_to image_tag(article.obverse_photo.thumb.url), article %></td>
        <% else %>
          <td><%= link_to '詳細を見る', article %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate(@articles) %>
<br>

